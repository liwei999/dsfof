page {  
  display: block;  
  min-height: 100%;  
  background-color: #f9f9f9;  
} 

.settings-list {
  background: #fff;
  margin-top: 20rpx;
}
.settings-item {
  position: relative;
  line-height: 100rpx;
  margin: 0 30rpx;
  border-bottom: 1px solid #e4e6e6;
}
.settings-text {
  font-size: 30rpx;
}
.settings-switch {
  position: absolute;
  top: 10rpx;
  right: 0;
}
.no-border {
  border-bottom: none;
}
.settings-desc {
  position: absolute;
  right: 0;
  font-size: 26rpx;
  color: #888;
}