.center{width: 100%;  background: #ffffff;}


/**tab样式**/  
.swiper-tab{  
    width: 100%;  
    text-align: center;  
    line-height: 40px;
    height:40px; 
    border-bottom:5px solid #d9d9d9;

    /* position: fixed;
    background-color: #ffffff;
    z-index:2; */
    }  
.swiper-tab-list{
    font-size: 16px;
    display: inline-block;  
    width: 50%;  
    color: #373737;
    font-weight: bold; 
    
}  
.on{ color: #ff502e;  
    border-bottom: 5px solid #ff502e;}  
  
.swiper-box{ display: block;  width: 100%; overflow: hidden;}  
.swiper-box view{  
    text-align: center;  
}
.swiper_item{padding: 7px 0px 7px 0px; border-bottom: 1px solid #d9d9d9; width: 100%; font-size: 15px;color: #9d9d9d;}
.swiper_item_content{display: flex; flex-direction:row; margin-left: 23px; margin-right: 23px;}
.swiper_item_content_item{width: 33.3%; text-align: center; vertical-align: middle;border:1px solid #d9d9d9;padding: 4px 0px 4px 0px;border-right: 0px;}
.item_right{border-right: 1px solid #d9d9d9;border-radius: 0 5px 5px 0px}
.item_left{border-radius: 5px 0px 0px 5px}
.swiper_item_content_item_action{background-color: #d9d9d9; color: #373737;}
::-webkit-scrollbar
{
  width: 0;
  height: 0;
  color: transparent;
}

.table_th{display: flex; flex-direction: row;color: #555555;text-align: center;font-size: 14px;
 /* position: fixed;width: 100%; top: 43px; background-color: #ffffff;z-index:2 */
}
.table_th .th{flex:2;padding: 6px 0px;border-bottom: 1px solid #d9d9d9;}
.table_th .th1{flex:1;padding: 6px 0px;border-bottom: 1px solid #d9d9d9;}
.table_th .th4{flex:3;padding: 6px 0px;border-bottom: 1px solid #d9d9d9;}
.table_tbody{font-size:16px;color: #373737;}
.table_tr{display: flex;flex-direction: row;border-bottom: 1px solid #d9d9d9;padding:12px 0px; text-align: center;
}
.table_tr text{text-align: center;}

.thv{flex:2; text-align: center;}
.thv1{flex:1;text-align: center; }
.thv4{flex:3;text-align: center;}

.font_red{color:#ff0000;}
.font_green{color:#2bb98f;}