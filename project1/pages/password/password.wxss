page {  
  display: block;  
  min-height: 100%;  
  background-color: #f9f9f9;  
} 

.container1 {
	flex: 1;
  	display: flex;
  	flex-direction: column;
 	box-sizing: border-box;
}
.container1-body{
	flex: 1;
	overflow-y: auto;
	overflow-x: hidden;
}

.settings-item {
  background: #fff;
  position: relative;
  line-height: 100rpx;
  padding-left: 34rpx;
  border-bottom: none;
}

.settings-text {
  font-size: 30rpx;
}

.name {
  font-size: 28rpx;
  padding-left: 60rpx;
  color: #2f7ccb;
}

.group-body{
	background: #fff;
  margin-top: 20rpx;
}
.group-body .input-list{
	margin: 0;
	border: none;
}

.input-list{
	padding: 0 30rpx;
}
.input-list .input-item{
	padding: 20rpx 0rpx;
	line-height: 2;
	display: flex;
	font-size: 30rpx;
	border-top: 1rpx solid #e4e6e6;
}
.input-list .input-item:first-child{
	border-top: 0;
}

.input-item-label{
	display: block;
	width: 5em;
}
.input-item-content{
	flex:1;
  font-size: 28rpx;
  padding-top: 8rpx;
}

.btn-submit{
	padding: 50rpx;
  margin-top: 100rpx;
  font-size: 32rpx;
}

.btn-orange{
	background: #1AAD19;
	color: #fff;
}

.password-text{
	padding: 20rpx;
	text-align: center;
}
.password-text text{
	display: block;
	color: #888;
	font-size: 28rpx;
}
.password-text view{
	font-size: 48rpx;
	color: #f7982a;
}


